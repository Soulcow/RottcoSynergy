<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/toolbar_profilul_meu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="82">

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#F8F7FB"
                android:drawableLeft="@drawable/shapeusername"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:scrollHorizontally="true" />

            <TextView
                android:id="@+id/tvProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProfileName"
                android:layout_marginTop="10dp"
                android:background="#F8F7FB"
                android:drawableLeft="@drawable/shapemail"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:scrollHorizontally="true" />

            <EditText
                android:id="@+id/tvProfileMarcaMasina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProfileEmail"
                android:layout_marginTop="10dp"
                android:background="#F8F7FB"
                android:drawableLeft="@drawable/transportcaricon"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:scrollHorizontally="true" />

            <EditText
                android:id="@+id/tvProfileTipMasina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProfileMarcaMasina"
                android:layout_marginTop="10dp"
                android:background="#F8F7FB"
                android:drawableLeft="@drawable/transportcaricon"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:scrollHorizontally="true" />

            <EditText
                android:id="@+id/tvProfileMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProfileTipMasina"
                android:layout_marginTop="10dp"
                android:background="#F8F7FB"
                android:drawableLeft="@drawable/mobile"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:scrollHorizontally="true" />

            <EditText
                android:id="@+id/etProfilePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/eye"
                android:layout_below="@+id/tvProfileMobile"
                android:layout_marginTop="10dp"
                android:paddingEnd="15dp"
                android:background="#F8F7FB"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="10dp"
                android:hint="@string/loginParola"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:id="@+id/bUpdateUser"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"

                android:layout_marginBottom="20dp"
                android:background="@drawable/button_bg_rounded_corners"
                android:layout_alignParentBottom="true"
                android:text="@string/salveaza"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>