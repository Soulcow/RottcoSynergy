        android:layout_alignBottom="@+id/ivTab1Compresor"
        android:text="Aer / Compresor"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/lubrifiant"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/ivTab1Compresor"
        android:id="@+id/ivTab1Lubrifiant"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <TextView
