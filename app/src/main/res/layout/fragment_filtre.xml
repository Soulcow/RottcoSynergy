<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/whatDistance"
        android:id="@+id/tvFilterQuestionDistance"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvFiltertextView"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvFilterQuestionDistance"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:max="100"
        android:progress="50"
        android:layout_below="@+id/tvFiltertextView"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/seekBar"
        android:layout_width="match_parent"
        android:text="@string/whatServices"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:id="@+id/tvWhatServices"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/md_black_1000"
        android:textSize="16sp"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/magazin"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/tvWhatServices"
        android:id="@+id/ivTab1Magazin"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/ivTab1Magazin"
        android:layout_alignTop="@+id/ivTab1Magazin"
        android:layout_alignBottom="@+id/ivTab1Magazin"
        android:text="Magazin"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/sandvis"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/ivTab1Magazin"
        android:id="@+id/ivTab1Sandwich"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/ivTab1Sandwich"
        android:layout_alignTop="@+id/ivTab1Sandwich"
        android:layout_alignBottom="@+id/ivTab1Sandwich"
        android:text="Sandwich preambalat"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/restaurant"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/ivTab1Sandwich"
        android:id="@+id/ivTab1Restaurant"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/ivTab1Restaurant"
        android:layout_alignTop="@+id/ivTab1Restaurant"
        android:layout_alignBottom="@+id/ivTab1Restaurant"
        android:text="Restaurant"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/cazare"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/ivTab1Restaurant"
        android:id="@+id/ivTab1Cazare"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/ivTab1Cazare"
        android:layout_alignTop="@+id/ivTab1Cazare"
        android:layout_alignBottom="@+id/ivTab1Cazare"
        android:text="Cazare"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
