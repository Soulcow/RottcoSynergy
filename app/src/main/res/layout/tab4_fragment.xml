<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/md_black_1000"
        android:textSize="16sp"
        android:text="Promotii cash"
        android:id="@+id/tvTab4PromotiiCash"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_below="@+id/tvTab4PromotiiCash"
        android:orientation="horizontal"
        android:id="@+id/llTab4One"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/md_black_1000"
                android:background="@drawable/rectangle_combustibil"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="5dp"
                android:drawableStart="@drawable/carburant_tab_four"
                android:padding="15dp"
                android:text="Carburant"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/md_black_1000"
                android:background="@drawable/rectangle_combustibil"
                android:drawableStart="@drawable/shop_tab_four"
                android:padding="15dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="5dp"
                android:text="Shop"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="@color/md_black_1000"
        android:text="Promotii flota"
        android:layout_below="@id/llTab4One"
        android:id="@+id/tvTab4PromotiiFlota"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@+id/tvTab4PromotiiFlota"
        android:orientation="horizontal"
        android:id="@+id/llTab4Two"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/md_black_1000"
                android:background="@drawable/rectangle_combustibil"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="5dp"
                android:drawableStart="@drawable/carburant_tab_four"
                android:padding="15dp"
                android:text="Carburant"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/md_black_1000"
                android:background="@drawable/rectangle_combustibil"
                android:drawableStart="@drawable/shop_tab_four"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:text="Shop"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>